{% extends template('page-layout-main') %}

{% define data = {
    helloWorld: _view.helloWorld
} %}

{% block contentClass %}spacing-y spacing-y--biggest spacing-x spacing-x--big{% endblock %}

{% block breadcrumbs %}{% endblock %}

{% block title %}
    <h1 class="title title--main title--with-border title--medium spacing-x spacing-x--big">{{data.title}}</h1>
{% endblock %}

{% block content %}
    <div class="spacing-bottom spacing-bottom--inner spacing-bottom--biggest">
        <p class="text-center text-big spacing-bottom spacing-bottom--biggest">{{data.helloWorld}}</p>
        <p class="text-center">
            <a href="{{ url('home') }}" class="button">{{data.title}}</a>
        </p>
    </div>
{% endblock %}
